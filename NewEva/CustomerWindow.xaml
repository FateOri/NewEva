<Window
    x:Class="NewEva.CustomerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewEva"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:NewEva.Ui"
    xmlns:vm="clr-namespace:NewEva.VM"
    Title="CustomerWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:PrivatePersonVM}">
            <ui:PrivatePersonUC />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrganizationVM}">
            <ui:OrganizationUC />
        </DataTemplate>
    </Window.Resources>
    <Grid>

        <ContentControl Content="{Binding CurrentPage}" />

    </Grid>
</Window>
