<UserControl
    x:Class="NewEva.Ui.ReportUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewEva.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="24" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="24" />
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Номер отчета" />
        <TextBox
            Name="tbNumberReport"
            Grid.Row="1"
            Grid.Column="2"
            Margin="5"
            Text="{Binding Report.Number}" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Дата оценки" />
        <DatePicker
            Grid.Row="2"
            Grid.Column="2"
            Margin="5"
            SelectedDate="{Binding Report.DateVulation}" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Дата составления" />
        <DatePicker
            Grid.Row="3"
            Grid.Column="2"
            Margin="5"
            SelectedDate="{Binding Report.DateCompilation}" />
        <Label
            Grid.Row="1"
            Grid.Column="3"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Номер договора" />
        <TextBox
            Grid.Row="1"
            Grid.Column="4"
            Margin="5"
            Text="{Binding DocsFoundation.Number}" />
        <Label
            Grid.Row="2"
            Grid.Column="3"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Дата договора" />
        <DatePicker
            Grid.Row="2"
            Grid.Column="4"
            Margin="5"
            SelectedDate="{Binding DocsFoundation.DateFoundation}" />

        <Label
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Цель оценки" />
        <TextBox
            Grid.Row="4"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Margin="5"
            Text="{Binding DocsFoundation.Target}" />
        <Label
            Grid.Row="5"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Вид стоимости" />
        <ComboBox
            Grid.Row="5"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Margin="5"
            ItemsSource="{Binding TypeCosts}" />
        <Label
            Grid.Row="6"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Оценщик" />
        <ComboBox
            Grid.Row="6"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Margin="5"
            ItemsSource="{Binding Appraisers}" />
        <Label
            Grid.Row="7"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Тип клиента" />
        <Canvas
            Grid.Row="7"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Height="12"
            Margin="5"
            VerticalAlignment="Center">
            <RadioButton Content="Частное лицо" IsChecked="{Binding IsPrivatePerson}" />
            <RadioButton
                Canvas.Left="100"
                Content="Организация"
                IsChecked="{Binding IsOrganization}" />
        </Canvas>

        <Button
            Grid.Row="8"
            Grid.Column="4"
            Margin="5"
            VerticalAlignment="Top"
            Command="{Binding DataContext.FromReportPage, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
            Content="Далее &gt;&gt;" />
    </Grid>
</UserControl>
