<UserControl
    x:Class="NewEva.Ui.ContractUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewEva.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styletheme="clr-namespace:NewEva.StyleHelper"
    xmlns:ui="clr-namespace:NewEva.Ui.Customer"
    xmlns:vm="clr-namespace:NewEva.VM.Customer"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:PrivatePersonListVM}">
            <ui:PrivatePersonListUC />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrganizationListVM}">
            <ui:OrganizationListUC />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PrivatePersonVM}">
            <ui:PrivatePersonUC />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrganizationVM}">
            <ui:OrganizationUC />
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="tbx_NumberContract"
                Margin="5,10"
                styletheme:HintAssist.Hint="Номер договора"
                Style="{StaticResource FloatingHintTextBox}"
                Text="{Binding Report.Number}" />
            <DatePicker
                x:Name="dp_DateContract"
                Grid.Column="1"
                Margin="5,10"
                SelectedDate="{Binding Report.DateVulation}" />
            <TextBox
                x:Name="txb_Target"
                Grid.Column="2"
                Margin="5,10"
                styletheme:HintAssist.Hint="Цель оценки"
                Style="{StaticResource FloatingHintTextBox}"
                Text="{Binding Contract.Target}" />
        </Grid>
        <ComboBox
            x:Name="cb_TypeCost"
            Grid.Row="1"
            Margin="5,10"
            ItemsSource="{Binding TypeCosts}"
            SelectedItem="{Binding IsTypeCost}" />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock
                    Margin="5,10"
                    VerticalAlignment="Center"
                    Style="{StaticResource Headline6TextBlock}"
                    Text="Заказчик отчета" />
                <ListBox
                    Margin="15,10"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    BorderThickness="0">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBoxItem
                        Width="150"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Content="Физическое лицо" />
                    <ListBoxItem
                        Width="150"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Content="Юридическое лицо" />
                </ListBox>
            </StackPanel>
            <Grid Grid.Row="1">
                <ContentControl Content="{Binding CustomerPage}" />
            </Grid>
        </Grid>
        <Button
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Продолжить" />
    </Grid>
</UserControl>
