<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NewEva.Style">

    <!--  Control colors.  -->
    <Color x:Key="WindowColor">#ffffff</Color>
    <Color x:Key="MenuBarColor">#f2f2f2</Color>
    <Color x:Key="PageColor">#f2f2f2</Color>

    <Color x:Key="TextColor">#0d0d0d</Color>
    <Color x:Key="Contentcolor">#f2f2f2</Color>

    <Color x:Key="ControlLightColor">#F2F2F2</Color>
    <Color x:Key="ControlMediumColor">#41b5f9</Color>
    <Color x:Key="ControlDarkColor">#12a2f8</Color>

    <Color x:Key="DisabledControlColor">#8d8d8d</Color>
    <Color x:Key="ErrorControlColor">#bf2233</Color>

    <!--  Border colors  -->
    <Color x:Key="BorderLightColor">#8d8d8d</Color>
    <Color x:Key="BorderDarkColor">#12a2f8</Color>

    <Color x:Key="ErrorValidBorderColor">#bf2233</Color>
    <Color x:Key="ValidBorderColor">#12b697</Color>


</ResourceDictionary>